---
import Layout from '../layouts/Page.astro'
import Container from '../components/Container.astro';
import SignupForm from '../components/SignupForm.astro';

const seo = {
  title: 'LaterGator',
  description: 'Easily save articles, videos, podcasts and more for later consumption with LaterGator',
}
---

<style>
  .hero__article {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 70vh;
    text-align: center;
  }
</style>

<Layout seo={seo}>
  <Container narrow>
    <article class="hero__article">
      <h1 class="fade-in">Coming <s>Soon</s> Later...</h1>
      <p class="fade-in">Save content for later with LaterGator.</p>
      <p class="fade-in">Be the first to know when the app is live!</p>
      <SignupForm />
    </article>
  </Container>
</Layout>

